{
  "compilerOptions": {
    "declaration": true,
    "outDir": "./lib/",
    "module": "esnext",
    "moduleResolution": "node",
    "target": "esnext",
    "jsx": "react",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "strictPropertyInitialization": true,
    "strictNullChecks": true
  },
  "include": ["./src/"],
  "exclude": ["node_modules"]
}
